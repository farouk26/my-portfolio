    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "postcss": "^8.4.35",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.4.1"
  },
  "config": {
    "commitizen": {
